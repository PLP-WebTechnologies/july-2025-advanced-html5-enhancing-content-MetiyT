    <section aria-labelledby="registration-form-heading">
      <h2 id="registration-form-heading">User Registration Form</h2>
      <form action="#" method="post" novalidate>
        <!-- Text Inputs -->
        <label for="fullname">Full Name <span aria-hidden="true" style="color:red">*</span></label>
        <input
          type="text"
          id="fullname"
          name="fullname"
          placeholder="John Doe"
          required
          autocomplete="name"
          aria-required="true"
        />

        <label for="email">Email Address <span aria-hidden="true" style="color:red">*</span></label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="example@example.com"
          required
          autocomplete="email"
          aria-required="true"
        />

        <label for="username">Username (readonly)</label>
        <input
          type="text"
          id="username"
          name="username"
          value="user1234"
          readonly
          autocomplete="off"
        />

        <!-- Password -->
        <label for="password">Password <span aria-hidden="true" style="color:red">*</span></label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Create a password"
          required
          minlength="8"
          autocomplete="new-password"
          aria-required="true"
        />

        <!-- Number -->
        <label for="age">Age <span aria-hidden="true" style="color:red">*</span></label>
        <input
          type="number"
          id="age"
          name="age"
          placeholder="18"
          min="13"
          max="120"
          required
          autocomplete="off"
          aria-required="true"
        />

        <!-- Date -->
        <label for="dob">Date of Birth <span aria-hidden="true" style="color:red">*</span></label>
        <input
          type="date"
          id="dob"
          name="dob"
          required
          max="2008-12-31"
          autocomplete="bday"
          aria-required="true"
          title="Please enter your date of birth (must be 13 or older)."
        />

        <!-- Radio Buttons -->
        <fieldset>
          <legend>Gender <span aria-hidden="true" style="color:red">*</span></legend>
          <input type="radio" id="gender-m" name="gender" value="male" required />
          <label for="gender-m">Male</label>

          <input type="radio" id="gender-f" name="gender" value="female" />
          <label for="gender-f">Female</label>

          <input type="radio" id="gender-o" name="gender" value="other" />
          <label for="gender-o">Other</label>
        </fieldset>

        <!-- Select Dropdown -->
        <label for="country">Country <span aria-hidden="true" style="color:red">*</span></label>
        <select id="country" name="country" required autocomplete="country" aria-required="true">
          <option value="" disabled selected>Select your country</option>
          <option value="us">United States</option>
          <option value="ca">Canada</option>
          <option value="uk">United Kingdom</option>
          <option value="et">Ethiopia</option>
          <option value="au">Australia</option>
        </select>

        <!-- Textarea -->
        <label for="about">Tell us about yourself</label>
        <textarea
          id="about"
          name="about"
          rows="4"
          placeholder="A few words about you..."
          autocomplete="off"
        ></textarea>

        <!-- Checkbox -->
        <fieldset>
          <legend>Subscribe to newsletter?</legend>
          <input type="checkbox" id="newsletter" name="newsletter" value="yes" />
          <label for="newsletter">Yes, I want to receive updates.</label>
        </fieldset>

        <!-- Submit button -->
        <button type="submit">Register</button>
      </form>
